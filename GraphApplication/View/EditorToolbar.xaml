<UserControl x:Class="GraphApplication.View.EditorToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphApplication.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="100" >
    <Grid>
        <WrapPanel Orientation="Vertical" >
            <WrapPanel.Background>
                <SolidColorBrush Color="Red"></SolidColorBrush>
            </WrapPanel.Background>
            
            <RadioButton Style="{StaticResource ToolButtonPrefab}" Tag="0" IsChecked="True">Select</RadioButton>
            <RadioButton Style="{StaticResource ToolButtonPrefab}" Tag="1" >Move</RadioButton>
            <RadioButton Style="{StaticResource ToolButtonPrefab}" Tag="2" > Node</RadioButton>
            <RadioButton Style="{StaticResource ToolButtonPrefab}" Tag="3" >Arrow</RadioButton>
            <RadioButton Style="{StaticResource ToolButtonPrefab}" Tag="4" >Grid</RadioButton>
        </WrapPanel>
    </Grid>
</UserControl>
