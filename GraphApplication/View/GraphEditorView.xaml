        <Grid>
                <Canvas ClipToBounds="True"
                    Panel.ZIndex="-1"
                        MouseDown="Canvas_MouseDown"
                        MouseUp="Canvas_MouseUp"
                        MouseMove="Canvas_MouseMove"
                        >
                    <Canvas.Background>
                        <!--<LinearGradientBrush>
                            <GradientStop Color="Gray" Offset="0" />

                            <GradientStop Color="White" Offset="1.0" />
                        </LinearGradientBrush>-->
                    <SolidColorBrush>
                        Gray
                    </SolidColorBrush>
                    </Canvas.Background>

                <!--<Rectangle
                    Panel.ZIndex="-1"
                        Width="500"
                        Height="300"
                        Canvas.Left="{Binding OffsetX}"
                        Canvas.Top="{Binding OffsetY}"
                            IsHitTestVisible="False"
                        >
                        <Rectangle.Fill>
                            <LinearGradientBrush>
                                <GradientStop Color="White" Offset="1.0" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    <Rectangle.LayoutTransform>
                        <ScaleTransform  ScaleX="{Binding ScaleValue}" ScaleY="{Binding ScaleValue}" />
                    </Rectangle.LayoutTransform>
                </Rectangle>-->
        
                <ItemsControl ItemsSource="{Binding GraphModelView.VertexModelViews}"
                              Canvas.Left="{Binding OffsetX}"
                              Canvas.Top="{Binding OffsetY}"
                              Width="500"
                                Height="300"
                              Panel.ZIndex="2">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas
                            
                                    >
                            <Canvas.LayoutTransform>
                                <ScaleTransform  ScaleX="{Binding ScaleValue}" ScaleY="{Binding ScaleValue}" />
                            </Canvas.LayoutTransform>
                            
                                </Canvas>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Canvas.Left" Value="{Binding Left, Mode=TwoWay}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Top, Mode=TwoWay}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                        <control:VertexButton DataContext="{Binding}"
                                        Click="VertexButton_Click"
                                        MouseMove="VertexButton_MouseMove"
                                        MouseDown="VertexButton_MouseDown"
                                        MouseUp="VertexButton_MouseUp"
                                        PreviewMouseUp="VertexButton_PreviewMouseUp"
                                        PreviewMouseDown="VertexButton_PreviewMouseDown"
                                        MouseDoubleClick="VertexButton_MouseDoubleClick"
                                        Panel.ZIndex="10">
                        </control:VertexButton>
                            <!--<Grid>
                                <Grid.Style>
                                    <Style>
                                        
                                    </Style>
                                </Grid.Style>          
                                <Ellipse
                                        MouseMove="VertexButton_MouseMove"
                                        MouseDown="VertexButton_MouseDown"
                                        MouseUp="VertexButton_MouseUp"
                                        PreviewMouseUp="VertexButton_PreviewMouseUp"
                                        PreviewMouseDown="VertexButton_PreviewMouseDown"
                                        Panel.ZIndex="10"
                                        Width="50"
                                        Height="50"
                                        Fill="White" Stroke="Black" 
                                        StrokeThickness="2">
                                
                            </Ellipse>
                                <TextBlock Text="Vertex"/>
                            </Grid>-->

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding GraphModelView.EdgeModelViews}"
                              Canvas.Left="{Binding OffsetX}"
                              Canvas.Top="{Binding OffsetY}"
                              Width="500"
                        Height="300"
                              Panel.ZIndex="1">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas>
                                <Canvas.LayoutTransform>
                                    <ScaleTransform  ScaleX="{Binding ScaleValue}" ScaleY="{Binding ScaleValue}" />
                                </Canvas.LayoutTransform>
                            
                                </Canvas>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <!-- Налаштуйте контейнери за потребою -->
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                
                                <Line  
                                    X1="{Binding Path=Start.Left}"
                                        Y1="{Binding Path=Start.Top}"
                                        X2="{Binding Path=End.Left}"
                                        Y2="{Binding Path=End.Top}"
                                    Style="{StaticResource Edge}"
                                        MouseDown="Line_MouseDown"
                                        MouseUp="Line_MouseUp"
                                    MouseMove="Line_MouseMove"
                                        >
                                </Line>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>

            <Grid HorizontalAlignment="Right">
                <Border Grid.Column="1"
                    Background="White"
                        CornerRadius="10"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    Margin="5, 5, 5, 5"
                        Padding="10,10,10,10">
                    <Grid>
                        
                    <StackPanel Orientation="Vertical">


                        <Label HorizontalAlignment="Center" >
                            Інформація про граф
                        </Label>
                        
                        <Separator/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition>
                                    </ColumnDefinition>
                                    <ColumnDefinition>
                                    </ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0">
                                    ксть вершин
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="0">
                                    ксть ребер
                                </TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="0">
                                    ксть компонентів
                                </TextBlock>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding GraphModelView.VertexCount}">
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding GraphModelView.EdgeCount}">
                                </TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="1">
                                </TextBlock>
                            </Grid>
                        

                        
                    </StackPanel>

                    <!--<Button VerticalAlignment="Bottom">
                        Оновити
                    </Button>-->

                    </Grid>
                </Border>
            </Grid>

        </Grid>


        <Grid Grid.Row="1">
            <Grid.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Black" Offset="0"></GradientStop>
                    <GradientStop Color="gray" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Grid.Background>
            <Slider x:Name="Slider"
                    Width="200"
                    Height="10" 
                    Panel.ZIndex="6"
                    Minimum="0.5" Maximum="3"
                    HorizontalAlignment="Left"
                    Value="{Binding ScaleValue, Mode=TwoWay}">
            </Slider>
        </Grid>

            

    </Grid>
</UserControl>
